
@using CardsStore.Web.Utils
@model CardsStore.Application.DTO.CardListOutput

<button class="btn btn-primary blue" id="AddNewButton">Add new</button>

<table class="table table-striped table-hover">
	<thead>
	<tr>
		<th>Name
		</th>
		<th style="width: 30%;">
			Description
		</th>
		<th>
			Web site
		</th>
		<th style="width: 30%;">
			Categories
		</th>
		<th></th>
	</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				<button type="button" model-id="@item.ID" class="EditLink btn-link">@item.Name</button>
			</td>
			<td>@item.Description</td>
			<td>
				<a target="_blank" href="@item.WebSite">@item.WebSite</a>
			</td>
			<td>@item.CategoriesString</td>
			<td>
				<button type="button" model-id="@item.ID" class="EditLink btn-link">Edit</button>
				
				<button type="button" model-id="@item.ID" class="DeleteLink btn-link">Delete</button>
			</td>
		</tr>
	}
</table>

<div id="EditContainer">
	
</div>

@section scripts
{
	@Html.IncludeScript("~/Views/Home/index.js")
}

